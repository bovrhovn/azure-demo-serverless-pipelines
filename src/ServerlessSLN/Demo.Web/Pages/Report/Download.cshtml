@page
@model DownloadPageModel

@{
    ViewData["Title"] = "Download report";
}

<h2>
    Use below table and download status report
</h2>

@if (Model.Reports.Any())
{
    <table class="table table-hover">
        <tr>
            <td>
                Name
            </td>
            <td>Download</td>
        </tr>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td>@report.Name</td>
                <td>
                    <a href="@report.Url"
                       target="_blank">
                        <i class="fas fa-download"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-info"> No data is present. Create build to see the results...</p>
}